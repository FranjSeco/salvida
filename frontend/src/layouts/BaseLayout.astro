---
import '../styles/theme.css';
import NavBar from '../components/NavBar.astro';
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{Astro.props.title || 'Salvida'}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Amatica+SC:wght@400;700&family=Roboto+Flex:wght@400;600;700&display=swap" rel="stylesheet">
    <script type="module" src="../theme/client.js"></script>
  </head>
  <body>
    <NavBar />
    <main class="main-container">
      <slot />
    </main>
    <footer class="footer">
      <div class="footer-content">
        <div class="footer-column">
          <h4>HOME</h4>
          <ul>
            <li><a href="/">Inicio</a></li>
            <li><a href="/profile">Crea tu cuenta</a></li>
            <li><a href="/profile">Accede</a></li>
          </ul>
        </div>
        <div class="footer-column">
          <h4>INFORMACIÓN</h4>
          <ul>
            <li><a href="/about">Sobre nosotras</a></li>
            <li><a href="/about">¿Por qué Salvida?</a></li>
          </ul>
        </div>
        <div class="footer-column">
          <h4>RRSS</h4>
          <div class="social-icons">
            <a href="#" class="social-icon" aria-label="Facebook">
              <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
                <circle cx="20" cy="20" r="20" fill="#4D276B"/>
                <path d="M22.5 20.5H20.5V28H17.5V20.5H15.5V17.5H17.5V15.5C17.5 13.5 18.5 11.5 21.5 11.5H24.5V14.5H22.5C21.5 14.5 20.5 15 20.5 16V17.5H24.5L24 20.5H22.5Z" fill="white"/>
              </svg>
            </a>
            <a href="#" class="social-icon" aria-label="Instagram">
              <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
                <circle cx="20" cy="20" r="20" fill="url(#instagram-gradient)"/>
                <path d="M20 12C15.5 12 12 15.5 12 20C12 24.5 15.5 28 20 28C24.5 28 28 24.5 28 20C28 15.5 24.5 12 20 12ZM20 25C17 25 15 23 15 20C15 17 17 15 20 15C23 15 25 17 25 20C25 23 23 25 20 25Z" fill="white"/>
                <circle cx="20" cy="20" r="3" fill="white"/>
                <circle cx="26" cy="14" r="1.5" fill="white"/>
                <defs>
                  <radialGradient id="instagram-gradient" cx="27%" cy="108%" r="50%">
                    <stop offset="0%" stop-color="#BEAFC6"/>
                    <stop offset="50%" stop-color="#76558A"/>
                    <stop offset="100%" stop-color="#4D276B"/>
                  </radialGradient>
                </defs>
              </svg>
            </a>
            <a href="#" class="social-icon" aria-label="TikTok">
              <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
                <circle cx="20" cy="20" r="20" fill="#76558A"/>
                <path d="M22 12C20.5 12 19 13 19 14.5V16.5C18 16.5 17 17.5 17 18.5V20.5C17 21.5 18 22.5 19 22.5H21V24.5C21 26 22.5 27.5 24 27.5C25.5 27.5 27 26 27 24.5V22.5C27 21 25.5 19.5 24 19.5V17.5C26 17.5 28 15.5 28 13.5V11.5C28 10 26.5 8.5 25 8.5C23.5 8.5 22 10 22 11.5V12Z" fill="#BEAFC6"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
      <div class="footer-bottom">
        <span>SALVIDA 2025</span>
        <svg width="15" height="15" viewBox="0 0 15 15" fill="none">
          <path d="M7.5 0C3.36 0 0 3.36 0 7.5C0 11.64 3.36 15 7.5 15C11.64 15 15 11.64 15 7.5C15 3.36 11.64 0 7.5 0ZM7.5 13.5C4.19 13.5 1.5 10.81 1.5 7.5C1.5 4.19 4.19 1.5 7.5 1.5C10.81 1.5 13.5 4.19 13.5 7.5C13.5 10.81 10.81 13.5 7.5 13.5Z" fill="currentColor"/>
        </svg>
      </div>
    </footer>
  </body>
</html>

<style>
  .main-container {
    min-height: calc(100vh - 200px);
    padding: 2rem 0;
  }

  .footer {
    background: var(--color-background);
    border-top: 1px solid var(--color-accent);
    padding: 2rem 0 0;
    margin-top: 3rem;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    padding: 0 1rem 2rem;
  }

  .footer-column h4 {
    color: var(--color-primary);
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 1.25rem;
    text-transform: uppercase;
    margin: 0 0 1rem 0;
  }

  .footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-column li {
    margin-bottom: 0.5rem;
  }

  .footer-column a {
    color: var(--color-neutral);
    text-decoration: none;
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 0.9375rem;
    text-transform: uppercase;
    transition: color 0.3s ease;
  }

  .footer-column a:hover {
    color: var(--color-primary);
  }

  .social-icons {
    display: flex;
    gap: 1.625rem;
    justify-content: center;
    align-items: center;
    padding: 0.125rem 0;
  }

  .social-icon {
    display: block;
    transition: transform 0.3s ease;
  }

  .social-icon:hover {
    transform: scale(1.1);
  }

  .footer-bottom {
    background: var(--color-secondary);
    color: var(--color-white);
    text-align: center;
    padding: 1rem;
    font-family: var(--font-title);
    font-weight: 700;
    font-size: 1.875rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .footer-bottom svg {
    flex-shrink: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 1.5rem;
    }

    .social-icons {
      justify-content: center;
    }

    .footer-bottom {
      font-size: 1.5rem;
    }
  }
</style>
