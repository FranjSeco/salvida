---
const links = [
  { href: '/', text: 'INICIO' },
  { href: '/about', text: 'SOBRE NOSOTRAS' },
  { href: '/profile', text: 'PERFIL' },
  { href: '/prm', text: 'PRM' },
  { href: '/admin', text: 'ADMIN' }
];
---
<header class="header">
  <div class="header-container">
    <div class="logo">
      <img src="/logo.png" alt="Salvida" class="logo-img" />
    </div>
    <nav class="nav">
      <ul class="nav-list">
        {links.map(link => (
          <li class="nav-item">
            <a href={link.href} class="nav-link">{link.text}</a>
          </li>
        ))}
      </ul>
    </nav>
    <div class="user-actions">
      <button class="user-btn" aria-label="Usuario">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" fill="currentColor"/>
          <path d="M12 14C7.58172 14 4 17.5817 4 22H20C20 17.5817 16.4183 14 12 14Z" fill="currentColor"/>
        </svg>
      </button>
    </div>
  </div>
</header>

<style>
  .header {
    background: var(--gradient-header);
    border-bottom: 2px solid rgba(82, 40, 114, 0.5);
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 1rem;
    height: 73px;
  }

  .logo {
    display: flex;
    align-items: center;
  }

  .logo-img {
    height: 50px;
    width: auto;
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
  }

  .nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .nav-list {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .nav-item {
    margin: 0;
  }

  .nav-link {
    color: var(--color-primary);
    text-decoration: none;
    font-family: var(--font-title);
    font-weight: 700;
    font-size: 1.25rem;
    text-transform: uppercase;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    transition: all 0.3s ease;
    text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  }

  .nav-link:hover {
    background: rgba(82, 40, 114, 0.1);
    transform: translateY(-2px);
  }

  .user-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .user-btn {
    background: rgba(137, 27, 221, 0);
    border: 1px solid rgba(0, 0, 0, 0);
    color: var(--color-primary);
    padding: 0.5rem;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: inset 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  }

  .user-btn:hover {
    background: rgba(82, 40, 114, 0.1);
    transform: scale(1.1);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .header-container {
      padding: 0.5rem;
    }
    
    .nav-list {
      gap: 1rem;
    }
    
    .nav-link {
      font-size: 1rem;
      padding: 0.25rem 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .nav {
      display: none;
    }
    
    .header-container {
      justify-content: space-between;
    }
  }
</style>
