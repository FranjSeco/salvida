---
import Calendar from '../components/Calendar.jsx';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Calendario - Salvida">
  <section class="calendar-section">
    <div class="page-header">
      <h1>Calendario de Reservas</h1>
      <p>Selecciona una fecha para ver las reservas disponibles</p>
    </div>
    
    <div class="calendar-demo">
      <Calendar 
        client:load={true}
        onDateSelect={(date) => {
          console.log('Fecha seleccionada:', date);
          // Aquí puedes manejar la selección de fecha
        }}
        isAdmin={false}
      />
    </div>
    
    <div class="calendar-info">
      <h3>Información del Calendario</h3>
      <ul>
        <li><strong>Día actual:</strong> Resaltado en color accent (#76558a)</li>
        <li><strong>Día seleccionado:</strong> Resaltado en color primary (#522872)</li>
        <li><strong>Indicadores de reservas:</strong> Solo visible en modo administrador</li>
        <li><strong>Navegación:</strong> Usa los botones para cambiar mes y año</li>
      </ul>
    </div>
  </section>
</BaseLayout>

<style>
  .calendar-section {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .calendar-demo {
    margin: 2rem 0;
  }

  .calendar-info {
    background: var(--color-background);
    border-radius: 8px;
    padding: 1.5rem;
    margin-top: 2rem;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  }

  .calendar-info h3 {
    color: var(--color-primary);
    font-family: var(--font-title);
    font-weight: 700;
    margin: 0 0 1rem 0;
  }

  .calendar-info ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .calendar-info li {
    padding: 0.5rem 0;
    border-bottom: 1px solid rgba(118, 85, 138, 0.2);
    color: var(--color-neutral);
  }

  .calendar-info li:last-child {
    border-bottom: none;
  }

  .calendar-info strong {
    color: var(--color-accent);
    font-weight: 600;
  }
</style>

